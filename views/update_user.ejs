
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
        </div>

<!-- update user form; user var from render.ejs -->
<!-- form handling -->
<form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="level" class="text-light">Position</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="level" value="Junior" <%= user.level == 'Junior' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Junior</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="level" value="Senior"  <%= user.level == 'Senior' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Senior</label>
            </div>
        </div>

        <div class="form-group">
            <label for="Project" class="text-light">Projects</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="project" value="Easy" <%= user.project == 'Easy' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Easy !!</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="project" value="Hard" <%= user.project == 'Hard' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Hard..</label>
            </div>
        </div>

        <div class="form-group">
            <label for="help" class="text-light">Help req</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="help" value="Yes" <%= user.help == 'Yes' ? 'checked' : '' %> >
                <label for="radio-6" class="radio-label">Yes plz</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="help" value="No" <%= user.help == 'No' ? 'checked' : '' %> >
                <label for="radio-7" class="radio-label">No</label>
            </div>
        </div>

        <div class="form-group">
            <label for="work" class="text-light">Work Time</label>
            <input type="text" name="work" value="<%= user.work %>" placeholder="in hours eg. 2">
        </div>

        <div class="form-group">
            <label for="free" class="text-light">Free Time</label>
            <input type="text" name="free" value="<%= user.free %>" placeholder="in hours eg. 1">
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
    
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
